<!DOCTYPE html>
<html lang="pt-br">

   <head>
       <meta charset="utf-8"/>
       <title>Admin</title>
    <%- include('../../imports'); -%>
    <%- include('../../navbar'); -%>
   </head>


   <body class="azul">
      <div class="container">

          <div class="row">
              <h2>Administração de Posts</h2>
          </div>
  
          <div class="row mb-2">
              <a href="/admin/noticias/create" class="btn btn-success">Nova Noticia</a>
          </div>
  
  <div class="row">

  <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Código</th>
          <th scope="col">Titulo</th>
          </tr>
          </thead>
          <tbody class="branco">
          
        <% noticias.forEach((noticias) => { %>
          <tr>
            <td><%= noticias.id %></td>
            <td><%= noticias.title %></td>
          </tr>
              
        <% }); %>
              
            </tbody>
          </table>
  
         </div>
     </div>
   </body>
</html>